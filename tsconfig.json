{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "Node",
      "rootDir": "./src",
      "sourceMap": false,
      "outDir": "./build",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
  